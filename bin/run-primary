#!/usr/bin/env zsh

USER=$(whoami)
CONTAINER_ID=$(docker ps -a | grep devserver-$USER | cut -c 1-12)

echo "Running devserver-$USER"

if [ -z $CONTAINER_ID ]; then
    docker run --name devserver-$USER -p 3000:3000 -p 7778:7778 --volume "/Users/$USER:/home/$USER" -d primarykids/devserver-$(echo $USER):latest
else
    echo "Container already exists for name: devserver-$USER, starting..."
    docker start devserver-$USER
fi


echo "Exec-ing into container..."
# https://stackoverflow.com/questions/33493456/docker-bash-prompt-does-not-display-color-output
docker exec -it -u $USER devserver-$USER env TERM=xterm-256color script -q -c "$SHELL" /dev/null
