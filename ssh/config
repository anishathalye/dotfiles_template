# MAIN OPTIONS
Host *
VisualHostKey no
#ForwardX11 no

Host jumpbox
  Hostname %h.emii.org.au
  ForwardAgent yes

Host *-nec
  Hostname %h-hob.emii.org.au
  Proxycommand ssh -q jumpbox nc -q0 %h %p
  ForwardAgent yes

Host *-aws
  Hostname %h-syd.emii.org.au
  Proxycommand ssh -q jumpbox nc -q0 %h %p
  ForwardAgent yes

Host 4-nec-hob
  Hostname %h.emii.org.au
  Proxycommand ssh -q jumpbox nc -q0 %h %p
  ForwardAgent yes

Host 10-aws-syd
  Hostname %h.emii.org.au
  Proxycommand ssh -q jumpbox nc -q0 %h %p
  ForwardAgent yes

Host commandpost
  Hostname %h.aodn.org.au
  Proxycommand ssh -q jumpbox nc -q0 %h %p
  ForwardAgent yes

Host *nec* *nsp* *aws* *po* commandpost* 
  PermitLocalCommand yes
  LocalCommand tar ch -C${HOME} .gitconfig  .initsys.sh .alias .pgpass | ssh -o PermitLocalCommand=no %n "tar mx -C${HOME}"

Host pipeline
  HostName 127.0.0.1
  User vagrant
  Port 2222
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile $CHEF_DIR/.vagrant/machines/pipeline/virtualbox/private_key
  IdentitiesOnly yes
  LogLevel FATAL
  ForwardAgent yes

Host geoserver-stack
  user ec2-user
  hostname geoserver-aodnstack-lbesnard.dev.aodn.org.au
  ForwardAgent yes
  PermitLocalCommand yes
  Proxycommand ssh -q jumpbox nc -q0 %h %p
  SetEnv LANG=C LC_CTYPE="en_US.UTF-8"
  LocalCommand tar ch -C${HOME} .gitconfig .initsys.sh | ssh -o PermitLocalCommand=no %n "tar mx -C/home/ec2-user"
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  LogLevel QUIET

Host github.com
  IdentityFile ~/.ssh/id_rsa
  Hostname ssh.github.com
  ForwardX11 no

