# -- user customizations -------------------------------------------------------
# this is the place to override or undo settings

# increase history size
#set -g history-limit 10000

# start with mouse mode enabled
#set -g mouse on

# force Vi mode
#   really you should export VISUAL or EDITOR environment variable, see manual
#set -g status-keys vi
#set -g mode-keys vi

# replace C-a by C-b instead of using both prefixes
 set -gu prefix2
unbind C-a
unbind C-b
set -g prefix C-b
bind C-b send-prefix

# move status line to top
#set -g status-position top
#
set-option -g default-shell ${SHELL}

# Quickly view system & process info in htop. p for process
bind-key p split-window -h "htop"

# Quickly edit todo list
bind-key t split-window -h "nvim ~/todo.md"

bind-key C-j choose-tree

# see pane title 
# https://stackoverflow.com/questions/40234553/how-do-i-rename-a-pane-in-tmux
set -g pane-border-status top
#set -g pane-border-format " [ ###P #T ] "
set -g pane-border-format " [ ###P #T  #(sleep 0.25;ps -t #{pane_tty} -o args= | head -n 1) ] "

bind-key T command-prompt -p "Title for pane: " "select-pane -T '%%'"



# fix ssh agent when tmux is detached
setenv -g SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock

bind-key -n C-s run-shell ' \
    current_prefix=$(tmux show-option -gqv prefix); \
    if [ "$current_prefix" = "C-a" ]; then \
        tmux set-option -g prefix C-b; \
        tmux display-message "Prefix switched to Ctrl-b"; \
    elif [ "$current_prefix" = "C-b" ]; then \
        tmux set-option -g prefix C-w; \
        tmux display-message "Prefix switched to Ctrl-w"; \
    else \
        tmux set-option -g prefix C-a; \
        tmux display-message "Prefix switched to Ctrl-a"; \
    fi'

