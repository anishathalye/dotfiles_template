[battery]
command=$SCRIPT_DIR/battery
markup=pango
interval=30

[wifi]
command=$SCRIPT_DIR/wifi
instance=_first_
format_up=:%quality on %essid
format_down=: down
interval=10

[ethernet]
command=$SCRIPT_DIR/ethernet
full_text=test
instance=_first_
interval=10
markup=pango
format_up=: %ip (%speed)
format_down=: down

[hostname]
command=echo ": $(hostname)"
interval=100

[time]
command=$SCRIPT_DIR/time
markup=pango
STRFTIME_FORMAT=%Y-%m-%d %H:%M:%S
interval=1

[load]
command=$SCRIPT_DIR/load
max_threshold=8
interval=1

[blank_space]
command=echo "  "
interval=1000
